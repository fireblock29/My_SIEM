# Détection d'un test ping
alert icmp any any -> any any (msg:"ICMP Ping detected"; sid:1000001; rev:1;)

# Détection d'accès à index.php avec param exploit
alert tcp any any -> any [80,8080] ( \
    msg:"TEST HTTP exploit in URI"; \
    content:"exploit="; http_uri; \
    sid:1000002; rev:2; )

# Détection d'un scan Nmap TCP SYN
alert tcp any any -> any any (flags:S; msg:"Nmap TCP SYN Scan"; sid:1000003; rev:1;)

# Détection de connexion SSH
alert tcp any any -> any 22 (msg:"SSH login attempt"; flow:to_server,established; content:"SSH-"; nocase; sid:1000004; rev:1;)

# Tentative d’injection SQL
alert tcp any any -> any 80 (msg:"Injection SQL possible"; content:"UNION SELECT"; http_uri; nocase; sid:1000005; rev:1;)
